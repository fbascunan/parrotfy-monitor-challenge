    <strong class="block font-medium mb-1">Player:</strong>
    <%= bet.player_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Round:</strong>
    <%= bet.round_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= bet.amount %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Color:</strong>
